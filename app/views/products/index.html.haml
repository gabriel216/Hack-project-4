%h1 #{@store.name}
= form_with url: store_products_path, method: :get, local: true do |form|
  = form.label :search
  = form.text_field :query
  = form.submit 'go'
%br/
%table
  %thead
    %tr
      %th Name
      %th Kind
  %tbody
  - @products.each do |product|
    %tr
      %td
        = product.name
%br/
= link_to 'New Product', new_store_product_path